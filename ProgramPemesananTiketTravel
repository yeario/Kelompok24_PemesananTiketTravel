            rute = "SOC-BANTEN"
            harga = 375000
            print("Tarif rute SOC-BANTEN: Rp ", harga)
        elif tarif == 4:
            rute = "SOC-SMG"
            harga = 100000
            print("Tarif rute SOC-SMG : Rp ", harga)
