                armada = "Eksekutif"
                print("Anda memilih armada ", armada)
                hargatiket = harga_total + 50000
                print("harga total: ", hargatiket)
            else:
                armada = "Ekonomi"
                print("Anda memilih armada ", armada)
                hargatiket = harga_total
                print("harga total: ", hargatiket)
                os.system('cls')

            print("Pilih lokasi penjemputan: ")
